@model Posadmin.Models.UbigeosModel
<div id="content">
   <section id="widget-grid" class="">
      <div class="row">

         <!-- NEW COL START -->
         <article class="col-sm-12 col-md-12 col-lg-12">

            <!-- Widget ID (each widget will need unique ID)-->
            <div class="jarviswidget jarviswidget-color-darken" id="wid-id-3"
                 data-widget-editbutton="false"
                 data-widget-deletebutton="false"
                 data-widget-colorbutton="false"
                 data-widget-fullscreenbutton="false"
                 data-widget-collapsed="false"
                 data-widget-sortable="false">

               <header>
                  <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                  <h2>Ubigeos</h2>

               </header>

               <!-- widget div-->
               <div>

                  <!-- widget edit box -->
                  <div class="jarviswidget-editbox">
                     <!-- This area used as dropdown edit box -->

                  </div>
                  <!-- end widget edit box -->
                  <!-- widget content -->
                  <div class="widget-body no-padding">
                     @foreach (KeyValuePair<string, ModelState> keyValuePair in ViewData.ModelState)
                     {
                        if (String.IsNullOrEmpty(keyValuePair.Key))
                        {
                           foreach (ModelError modelError in keyValuePair.Value.Errors)
                           {
                           <div class="alert adjusted alert-warning fade in">
                              <button class="close" data-dismiss="alert">
                                 ×
                              </button>
                              <i class="fa fa-fw fa-lg fa-exclamation-triangle"></i>
                              <strong>¡Oh No!</strong> <br />

                              @Html.Raw(HttpUtility.HtmlDecode(modelError.ErrorMessage))
                              <br />
                           </div>
                           }
                        }
                     }

                     @using (Html.BeginForm("UbigeosRegister", "Ubigeos", FormMethod.Post, new { @id = "ubigeos-search", @name = "ubigeos-search", @class = "smart-form", @novalidate = "novalidate" }))
                     {
                     @Html.AntiForgeryToken()
                     <header>
                        @if (Model.Item.Instance == SoftwareFactory.Infrastructure.BusinessEntity.InstanceEntity.Added)
                        { <label>Ingresar Ubigeo</label>  }
                        else
                        { <label>Editar Ubigeo</label>  }
                     </header>
                     <fieldset>
                        <section class="hidden">
                           @Html.HiddenFor(model => Model.Item.Instance)
                           @Html.HiddenFor(model => Model.Item.UBIG_Interno)
                        </section>
                        <div class="row">
                           <section class="col col-4">
                              @Html.LabelFor(model => model.Item.PAIS_Interno, new { @class = "label" })
                              <label class="select">
                                 @Html.DropDownListFor(model => model.Item.PAIS_Interno, new SelectList(string.Empty, "Value", "Text"), " < Seleccione PAIS_Interno > ", new { @id = "PAIS_Interno" })
                                 <b class="tooltip tooltip-top-right"><i class="fa fa-info-circle txt-color-teal"></i> Seleccione un pais</b>
                              </label>
                              <div class="note note-error" style="font-style: normal; font-size: 11px; line-height: 15px; color: #D56161;">@Html.ValidationMessage("PAIS_Interno")</div>
                           </section>
                           <section class="col col-6">
                              @Html.LabelFor(model => model.Item.UBIG_Nombre, new { @class = "label" })
                              <label class="input">
                                 @Html.EditorFor(model => model.Item.UBIG_Nombre, new { htmlAttributes = new { @class = "", type = "text", name = "UBIG_Nombre", autocomplete = "off" } })
                                 <b class="tooltip tooltip-top-right"><i class="fa fa-info-circle txt-color-teal"></i> Ingrese un nombre</b>
                              </label>
                              <div class="note note-error" style="font-style: normal; font-size: 11px; line-height: 15px; color: #D56161;">@Html.ValidationMessage("UBIG_Nombre")</div>
                           </section>
                           <section class="col col-2" style="min-height:57px; margin-bottom:0px;">
                              @Html.LabelFor(model => model.Item.UBIG_Activo, new { @class = "label" })
                              <label class="checkbox">
                                 @Html.EditorFor(model => model.Item.UBIG_Activo, new { htmlAttributes = new { @class = "", type = "checkbox", name = "UBIG_Activo" } })
                                 <i></i>
                              </label>
                              <div class="note note-error" style="font-style: normal; font-size: 11px; line-height: 15px; color: #D56161;">@Html.ValidationMessage("UBIG_Activo")</div>
                           </section>
                        </div>
                        <div class="row">
                           <section class="col col-3">
                              @Html.LabelFor(model => model.Item.UBIG_Nomenclatura, new { @class = "label" })
                              <label class="input">
                                 @Html.EditorFor(model => model.Item.UBIG_Nomenclatura, new { htmlAttributes = new { @class = "", type = "text", name = "UBIG_Nomenclatura", autocomplete = "off" } })
                                 <b class="tooltip tooltip-top-right"><i class="fa fa-info-circle txt-color-teal"></i> Ingrese una nomenclatura</b>
                              </label>
                              <div class="note note-error" style="font-style: normal; font-size: 11px; line-height: 15px; color: #D56161;">@Html.ValidationMessage("UBIG_Nomenclatura")</div>
                           </section>
                           <section class="col col-5">
                              @Html.LabelFor(model => model.Item.UBIG_Descripcion, new { @class = "label" })
                              <label class="input">
                                 @Html.EditorFor(model => model.Item.UBIG_Descripcion, new { htmlAttributes = new { @class = "", type = "text", name = "UBIG_Descripcion", autocomplete = "off" } })
                                 <b class="tooltip tooltip-top-right"><i class="fa fa-info-circle txt-color-teal"></i> Ingrese una descripcion</b>
                              </label>
                              <div class="note note-error" style="font-style: normal; font-size: 11px; line-height: 15px; color: #D56161;">@Html.ValidationMessage("UBIG_Descripcion")</div>
                           </section>
                           <section class="col col-4">
                              @Html.LabelFor(model => model.Item.UBIG_InternoPadre, new { @class = "label" })
                              <label class="select">
                                 @Html.DropDownListFor(model => model.Item.UBIG_InternoPadre, new SelectList(string.Empty, "Value", "Text"), " < Seleccione UBIG_InternoPadre > ", new { @id = "UBIG_InternoPadre" })
                                 <b class="tooltip tooltip-top-right"><i class="fa fa-info-circle txt-color-teal"></i> Seleccione un padre</b>
                              </label>
                              <div class="note note-error" style="font-style: normal; font-size: 11px; line-height: 15px; color: #D56161;">@Html.ValidationMessage("UBIG_InternoPadre")</div>
                           </section>
                        </div>
                        <div class="row">
                           <section class="col col-4">
                              @Html.LabelFor(model => model.Item.UBIG_Codigo1, new { @class = "label" })
                              <label class="input">
                                 @Html.EditorFor(model => model.Item.UBIG_Codigo1, new { htmlAttributes = new { @class = "", type = "text", name = "UBIG_Codigo1", autocomplete = "off" } })
                                 <b class="tooltip tooltip-top-right"><i class="fa fa-info-circle txt-color-teal"></i> Ingrese un codigo</b>
                              </label>
                              <div class="note note-error" style="font-style: normal; font-size: 11px; line-height: 15px; color: #D56161;">@Html.ValidationMessage("UBIG_Codigo1")</div>
                           </section>
                           <section class="col col-4">
                              @Html.LabelFor(model => model.Item.UBIG_Codigo2, new { @class = "label" })
                              <label class="input">
                                 @Html.EditorFor(model => model.Item.UBIG_Codigo2, new { htmlAttributes = new { @class = "", type = "text", name = "UBIG_Codigo2", autocomplete = "off" } })
                                 <b class="tooltip tooltip-top-right"><i class="fa fa-info-circle txt-color-teal"></i> Ingrese un codigo</b>
                              </label>
                              <div class="note note-error" style="font-style: normal; font-size: 11px; line-height: 15px; color: #D56161;">@Html.ValidationMessage("UBIG_Codigo2")</div>
                           </section>
                           <section class="col col-4">
                              @Html.LabelFor(model => model.Item.UBIG_Codigo3, new { @class = "label" })
                              <label class="input">
                                 @Html.EditorFor(model => model.Item.UBIG_Codigo3, new { htmlAttributes = new { @class = "", type = "text", name = "UBIG_Codigo3", autocomplete = "off" } })
                                 <b class="tooltip tooltip-top-right"><i class="fa fa-info-circle txt-color-teal"></i> Ingrese un codigo</b>
                              </label>
                              <div class="note note-error" style="font-style: normal; font-size: 11px; line-height: 15px; color: #D56161;">@Html.ValidationMessage("UBIG_Codigo3")</div>
                           </section>
                        </div>
                     </fieldset>
                     <footer>
                        <a href='@Url.Action("UbigeosSearch", "Ubigeos")' class="btn btn-labeled btn-default" title="Volver" style="padding-left:10px; padding-right:10px;">
                           <span class="btn-label" style="padding-bottom:0px; padding-top:0px;"><i class="fa fa-undo"></i></span>
                           Volver
                        </a>
                        <button type="submit" class="btn btn-labeled btn-primary" title="Guardar" style="padding-left:10px; padding-right:10px;">
                           <span class="btn-label" style="padding-bottom:0px; padding-top:0px;"><i class="fa fa-save"></i></span>
                           Guardar
                        </button>
                     </footer>
                     }
                  </div>

                  <!-- end widget content -->

               </div>
               <!-- end widget div -->

            </div>
            <!-- end widget -->

         </article>
         <!-- END COL -->
      </div>
   </section>
</div>

@section pagespecific {
<script type="text/javascript">

   // DO NOT REMOVE : GLOBAL FUNCTIONS!

   $(document).ready(function () {
      renderComboPaises($('#PAIS_Interno'), 'Pais', @Model.Item.PAIS_Interno);
      renderComboUbigeosPadres($('#UBIG_InternoPadre'), 'Ubigeo', @Model.Item.UBIG_InternoPadre);
   });


</script>
}
