            });
            var data1 = jsonfile.Registros.map(function (e) {
               return e.Activos;
            });
            var data2 = jsonfile.Registros.map(function (e) {
               return e.Anulados;
            });
            var data3 = jsonfile.Registros.map(function (e) {
               return e.Cancelados;
            });
            new Chart(document.getElementById("chartinformemes"), {
               type: 'bar',
               data: {
                  labels: labels,
                  datasets: [
                    {
                       label: "Activos",
                       backgroundColor: "#3cba9f",
                       data: data1
                    }, {
                       label: "Anulados",
                       backgroundColor: "#c45850",
                       data: data2
                    }, {
                       label: "Cancelados",
                       backgroundColor: "#3e95cd",
                       data: data3
                    }
                  ]
               },
               options: {
                  title: {
                     display: true,
                     text: 'Informe de Registros Mensuales'
                  }
               }
            });

         }
      });
      // END CHART

      // CHART - VISITAS MES
      $.ajax({
         type: "GET",
         url: 'GetIndicadorVisitasMesJSON',
         success: function (result) {
            var sumtotal = 0;
            var jsonfile = JSON.parse(result);
            var labels = jsonfile.Visitas.map(function (e) {
               return e.Meses;
            });
            var data1 = jsonfile.Visitas.map(function (e) {
               return e.Cantidad;
            });
            var colors = [getRandomColor()];
            for (x=1;x<labels.length;x++){
               colors.push(getRandomColor());
            };
            for (x=0;x<data1.length;x++){
               sumtotal = sumtotal + data1[x] ;
            };
            new Chart(document.getElementById("chartvisitasmes"), {
               type: 'polarArea',
               data: {
                  labels: labels,
                  datasets: [
                    {
                       label: "Visitas",
                       backgroundColor: colors,
                       data: data1
                    }
                  ]
               },
               options: {
                  title: {
                     display: true,
                     text: 'Cantidad y Porcentaje de Registros por Mes'
                  },
                  tooltips: {
                     callbacks: {
                        title: function (tooltipItem, data) {
                           return data['labels'][tooltipItem[0]['index']];
                        },
                        label: function (tooltipItem, data) {
                           return (data['datasets'][0]['data'][tooltipItem['index']]).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ',') + " visitas";
                        },
                        afterLabel: function (tooltipItem, data) {
                           var dataset = data['datasets'][0];
                           var percent = parseFloat((dataset['data'][tooltipItem['index']] * 100) / sumtotal).toFixed(2);
                           return '(' + percent + '%)';
                        }
                     },
                     backgroundColor: '#FFF',
                     titleFontSize: 16,
                     titleFontColor: '#0066ff',
