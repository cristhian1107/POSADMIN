   @*<script src="~/Scripts/chart/250/Chart.min.js"></script>*@
   <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
   <script type="text/javascript">

      // DO NOT REMOVE : GLOBAL FUNCTIONS!

      $(document).ready(function () {
         renderComboSucursales($('#FiltroSucursal'), 'Sucursal',@Model.InternoEmpresa, @Model.FiltroSucursal);
         renderComboAnios($('#FiltroAnio'),  @Model.FiltroAnio);
      });

      // CHART - VENTAS MES
      $.ajax({
         type: "GET",
         url: 'GetIndicadorVentasMesJSON',
         success: function (result) {
            var jsonfile = JSON.parse(result);
            var labels = jsonfile.Ventas.map(function (e) {
               return e.Meses;
            });
            var data1 = jsonfile.Ventas.map(function (e) {
               return e.Montos;
            });
            var data2 = jsonfile.Ventas.map(function (e) {
               return e.Pagos;
            });
            new Chart(document.getElementById("chartventasmes"), {
               type: 'bar',
               data: {
                  labels: labels,
                  datasets: [{
                     label: "Fec. Registro",
                     type: "line",
                     borderColor: "#1b4f72",
                     data: data1,
                     fill: false
                  },{
                     label: "Fec. Pago",
                     type: "line",
                     borderColor: "#186a3b",
                     data: data2,
                     fill: false
                  },{
                     label: "Fec. Registro",
                     type: "bar",
                     backgroundColor: "#aed6f1",
                     data: data1,
                  },{
                     label: "Fec. Pago",
                     type: "bar",
                     backgroundColor: "#abebc6",
                     data: data2,
                  }
                  ]
               },
               options: {
                  title: {
                     display: true,
                     text: 'Comparacion de Ventas por Mes'
                  },
                  legend: {
                     display: true
                  },
                  //tooltips: {
                  //   mode: 'index',
                  //   label: 'myLabel',
                  //   callbacks: {
                  //      label: function (tooltipItem, data) {
                  //         return data.datasets[tooltipItem.datasetIndex].label + ': ' + tooltipItem.yLabel.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ',');
                  //      }
                  //   }
                  //},
                  tooltips: {
                     callbacks: {
                        label: function(t, d) {
                           var xLabel = d.datasets[t.datasetIndex].label;
                           var yLabel = t.yLabel;
                           // if line chart // else -> if bar chart
                           if (t.datasetIndex === 0) return xLabel + ': ' + yLabel.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ',');
                           else if (t.datasetIndex === 1) return xLabel + ': ' + yLabel.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ',');
                        }
                     }
                  },
                  scales: {
                     yAxes: [
                         {
                            ticks: {
                               callback: function (label, index, labels) {
                                  return label / 1000 + 'k';
                               }
                            },
                            scaleLabel: {
                               display: true,
                               labelString: '1k = 1000'
                            }
                         }
                     ]
                  }
               }
            });

         }
      });
      // END CHART

      // CHART - INFORME MES
      $.ajax({
         type: "GET",
         url: 'GetIndicadorInformeMesJSON',
         success: function (result) {
            var jsonfile = JSON.parse(result);
            var labels = jsonfile.Registros.map(function (e) {
